<h1 class="text-center my-4"><i class="fas fa-list"></i> Créer une nouvelle liste</h1>

<%= simple_form_for @list, html: { class: 'd-flex flex-column align-items-center' } do |f| %>
  <div class="w-50 mb-3">
    <%= f.input :name, label: "Nom de la liste", input_html: { class: 'form-control' } %>
    <%= f.input :photo, label: "Photo de couverture", input_html: { class: 'form-control' }, as: :file %>

  </div>

  <%= f.button :submit, "Créer la liste", class: 'btn btn-primary w-50' %>
  <%= link_to 'Retour', lists_path, class: 'btn btn-secondary w-50 mt-3' %>

<% end %>
